		"    urls: []"\
		"  sids:"\
		"    enabled: []"\
		"    disabled: []"\
		"    modify: []"\
		"" > "$idstools_pillar_file"

}

soc_pillar() {
	touch $adv_soc_pillar_file
	touch $soc_pillar_file
}

