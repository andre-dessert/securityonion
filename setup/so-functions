	touch $adv_sensoroni_pillar_file
	
	printf '%s\n'\
		"sensoroni:"\
		"  node_checkin_interval_ms: $NODE_CHECKIN_INTERVAL_MS"\
		"  sensoronikey: '$SENSORONIKEY'"\
		"  soc_host: '$REDIRECTIT'" > $sensoroni_pillar_file

}

