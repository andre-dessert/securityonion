			printf '%s\n'\
				"  repos:"\
				"    - 'https://$HOSTNAME/repo/rules/strelka'" >> "$strelka_pillar_file"
		else 
			printf '%s\n'\
				"  repos:"\
				"    - 'https://github.com/Neo23x0/signature-base'" >> "$strelka_pillar_file"
		fi
}

